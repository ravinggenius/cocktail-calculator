root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx}]
indent_style = tab
indent_size = 4

[*.{conf,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.page]
indent_style = tab
indent_size = 4

[.babelrc]
indent_style = space
indent_size = 2
